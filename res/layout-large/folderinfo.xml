<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    android:shrinkColumns="*"
    android:stretchColumns="*" >

    <TableRow>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:padding="3dp"
            android:text="@string/fname"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/name_label"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right|center_vertical"
            android:maxLines="1"
            android:textColor="?android:attr/textColorPrimaryDisableOnly"
            android:textIsSelectable="false"
            android:textStyle="bold" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:padding="3dp"
            android:text="@string/fdirectory" />

        <TextView
            android:id="@+id/path_label"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right|center_vertical"
            android:maxLines="1"
            android:textColor="?android:attr/textColorPrimaryDisableOnly"
            android:textIsSelectable="false" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/first_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:padding="3dp"
            android:text="@string/Numberoffolders"
            android:textSize="@dimen/infopage" />

        <TextView
            android:id="@+id/dirs_label"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right|center_vertical"
            android:textIsSelectable="false" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/second_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:padding="3dp"
            android:text="@string/Numberoffiles"
            android:textSize="@dimen/infopage" />

        <TextView
            android:id="@+id/files_label"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right|center_vertical"
            android:textIsSelectable="false" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/third_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:padding="3dp"
            android:text="@string/LastModified"
            android:textSize="@dimen/infopage" />

        <TextView
            android:id="@+id/time_stamp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right|center_vertical"
            android:textIsSelectable="false" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/fourth_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:padding="3dp"
            android:text="@string/TotalSize"
            android:textSize="@dimen/infopage" />

        <TextView
            android:id="@+id/total_size"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right|center_vertical"
            android:textIsSelectable="false"
            android:textStyle="bold" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/fifth_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:padding="3dp"
            android:text="@string/AvaibleSize" />

        <TextView
            android:id="@+id/avaible_size"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right|center_vertical"
            android:textIsSelectable="false"
            android:textStyle="bold" />
    </TableRow>

</TableLayout>